
FROM redelivre/standalone-firefox-debug
ARG username
ARG selenium
ARG selenium_client
ENV SELENIUM=$selenium
COPY . /home/$username/selenium
USER $username
WORKDIR /home/$username/selenium
EXPOSE 9200
RUN sudo chown -R $username: /home/$username/selenium
RUN python lib/whatsapp.py --help
CMD python lib/whatsapp.py \
     --client $selenium_client \
     --username `cat /proc/sys/kernel/random/uuid` \
     --config /home/$username/selenium/foo.json \
     --headless